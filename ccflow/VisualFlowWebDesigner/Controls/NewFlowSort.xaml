<controls:ChildWindow x:Class="WF.Controls.NewFlowSort"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="350" Height="170" 
           Title="流程类别" FontSize="16"  >
    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="98"  />
            <RowDefinition  Height="40"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Grid.Column="0">            
            <TextBlock Text="流程类别名称:" FontSize="14" Margin="10,40,10,10" HorizontalAlignment="Center"  VerticalAlignment="Center"></TextBlock>
            <TextBox Name="txtFlowNodeName" Height="25"  FontSize="14" Margin="105,35,10,10" Width="200" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>
        </Canvas>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
            <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" Height="25" Margin="50,-10,0,0" />
            <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click"  Width="75" Height="25" Margin="50,-10,0,0"  />
        </StackPanel>
    </Grid>

</controls:ChildWindow>